<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.17">

                <EditText
                    android:id="@+id/input_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_weight"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.17">

                <EditText
                    android:id="@+id/input_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_height"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="@string/calculate"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_calculate"
                android:textAlignment="center"
                android:textSize="8sp"
                android:layout_weight="0.45" />

            <TextView
                android:text="@string/bmi_display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/text_bmi_display"
                android:layout_weight="0.76"
                android:textSize="24sp"
                android:textAlignment="textStart" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:onClick="userPage"
            android:layout_weight="1" />

        <Button
            android:text="Pedometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pedometer"
            android:layout_weight="1"
            tools:text="@string/pedometer"
            android:onClick="openPedometer"/>
    </LinearLayout>
