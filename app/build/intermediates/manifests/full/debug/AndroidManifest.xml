<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uwstout.healmebaby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uwstout.healmebaby.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uwstout.healmebaby.MainActivity" />
        <activity android:name="uwstout.healmebaby.PlannerActivity" />
        <activity android:name="uwstout.healmebaby.UserProfile" />
        <activity android:name="uwstout.healmebaby.ViewCalendar" />
        <activity android:name="uwstout.healmebaby.EnterWorkoutResults" />
        <activity
            android:name="uwstout.healmebaby.PopRegister"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name="uwstout.healmebaby.WorkoutRecords" />
        <activity android:name="uwstout.healmebaby.PedometerActivity" />

        <service
            android:name="uwstout.healmebaby.PedometerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="uwstout.healmebaby.PedometerSettingsActivity" />
    </application>

</manifest>